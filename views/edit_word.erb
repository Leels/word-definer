<h3><center>Update <%= @word.word_name() %></center></h3>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="word_name">Edit Word</label>
  <input id="word_name" name="word_name" type="text" class="form-control">
  <label for="definition">Edit Definition</label>
  <input id="definition" name="definition" type="text" class="form-control">
  <br>
  <button type="submit" class="btn btn-primary">Update</button>
</form>
<br>
<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete word</button>
</form>
<br>
<form action="/words" method="get">
  <button type="submit" name="new" class="btn btn-success">Return to Word List</button>
</form>
