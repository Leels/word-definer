<h2>Definition: <%= @definition.definition_text %></h2>
<h3>Word: <%= @definition.word.word_name %></h3>
<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="text">Update Definition</label>
  <input class="form-control" id="text" name="text" type="text" >
  <br>
  <button class=" btn btn-warning" type="submit">Update Definition</button>
</form>
<br>
<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button class=" btn btn-danger" type="submit">Delete Definition</button>
</form>
<br>
<form action="/words/<%= @definition.word.id %>" method="get">
  <button type="submit" class="btn btn-success">Back to <%= @definition.word.word_name %></button>
</form>
